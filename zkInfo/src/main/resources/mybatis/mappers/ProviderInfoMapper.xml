<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zkinfo.mapper.ProviderInfoMapper">
    
    <resultMap id="ProviderInfoResultMap" type="com.zkinfo.model.ProviderInfoEntity">
        <id property="id" column="id"/>
        <result property="interfaceName" column="interface_name"/>
        <result property="address" column="address"/>
        <result property="protocol" column="protocol"/>
        <result property="version" column="version"/>
        <result property="registrationTime" column="registration_time"/>
        <result property="lastHeartbeatTime" column="last_heartbeat_time"/>
        <result property="approvalStatus" column="approval_status"/>
        <result property="approver" column="approver"/>
        <result property="approvalTime" column="approval_time"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <sql id="providerColumns">
        id, interface_name, address, protocol, version, registration_time, 
        last_heartbeat_time, approval_status, approver, approval_time, created_at, updated_at
    </sql>
    
    <!-- 插入Provider信息 -->
    <insert id="insert" parameterType="com.zkinfo.model.ProviderInfoEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO provider_info (
            interface_name, address, protocol, version, registration_time, 
            last_heartbeat_time, approval_status, approver, approval_time, created_at, updated_at
        ) VALUES (
            #{interfaceName}, #{address}, #{protocol}, #{version}, #{registrationTime}, 
            #{lastHeartbeatTime}, #{approvalStatus}, #{approver}, #{approvalTime}, #{createdAt}, #{updatedAt}
        )
    </insert>
    
    <!-- 更新Provider信息 -->
    <update id="update" parameterType="com.zkinfo.model.ProviderInfoEntity">
        UPDATE provider_info SET
            interface_name = #{interfaceName},
            address = #{address},
            protocol = #{protocol},
            version = #{version},
            registration_time = #{registrationTime},
            last_heartbeat_time = #{lastHeartbeatTime},
            approval_status = #{approvalStatus},
            approver = #{approver},
            approval_time = #{approvalTime},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>
    
    <!-- 根据ID查找Provider -->
    <select id="findById" parameterType="long" resultMap="ProviderInfoResultMap">
        SELECT <include refid="providerColumns"/>
        FROM provider_info
        WHERE id = #{id}
    </select>
    
    <!-- 根据zkPath查找Provider -->
    <select id="findByZkPath" resultMap="ProviderInfoResultMap">
        SELECT <include refid="providerColumns"/>
        FROM provider_info
        WHERE interface_name = #{interfaceName} AND address = #{address} AND protocol = #{protocol} AND version = #{version}
    </select>
    
    <!-- 查找所有已审批的Provider -->
    <select id="findApprovedProviders" resultMap="ProviderInfoResultMap">
        SELECT <include refid="providerColumns"/>
        FROM provider_info
        WHERE approval_status = 'APPROVED'
    </select>
    
    <!-- 根据审批状态查找Provider -->
    <select id="findByApprovalStatus" parameterType="string" resultMap="ProviderInfoResultMap">
        SELECT <include refid="providerColumns"/>
        FROM provider_info
        WHERE approval_status = #{approvalStatus}
    </select>
    
    <!-- 查找所有Provider -->
    <select id="findAll" resultMap="ProviderInfoResultMap">
        SELECT <include refid="providerColumns"/>
        FROM provider_info
    </select>
    
</mapper>