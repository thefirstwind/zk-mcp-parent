<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zkinfo.mapper.ApprovalLogMapper">
    
    <resultMap id="ApprovalLogResultMap" type="com.zkinfo.model.ApprovalLog">
        <id property="id" column="id"/>
        <result property="providerId" column="provider_id"/>
        <result property="oldStatus" column="old_status"/>
        <result property="newStatus" column="new_status"/>
        <result property="approver" column="approver"/>
        <result property="approvalComment" column="approval_comment"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>
    
    <sql id="logColumns">
        id, provider_id, old_status, new_status, approver, approval_comment, created_at
    </sql>
    
    <!-- 插入审批日志 -->
    <insert id="insert" parameterType="com.zkinfo.model.ApprovalLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO approval_log (
            provider_id, old_status, new_status, approver, approval_comment, created_at
        ) VALUES (
            #{providerId}, #{oldStatus}, #{newStatus}, #{approver}, #{approvalComment}, #{createdAt}
        )
    </insert>
    
    <!-- 根据Provider ID查找审批日志 -->
    <select id="findByProviderIdOrderByCreatedAtDesc" parameterType="long" resultMap="ApprovalLogResultMap">
        SELECT <include refid="logColumns"/>
        FROM approval_log
        WHERE provider_id = #{providerId}
        ORDER BY created_at DESC
    </select>
    
</mapper>