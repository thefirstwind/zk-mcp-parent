<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pajk.mcpmetainfo.persistence.mapper.InterfaceWhitelistMapper">
    
    <resultMap id="InterfaceWhitelistResultMap" type="com.pajk.mcpmetainfo.persistence.entity.InterfaceWhitelistEntity">
        <id property="id" column="id"/>
        <result property="prefix" column="prefix"/>
        <result property="description" column="description"/>
        <result property="enabled" column="enabled"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <sql id="whitelistColumns">
        id, prefix, description, enabled, created_by, created_at, updated_by, updated_at
    </sql>
    
    <!-- 插入白名单记录 -->
    <insert id="insert" parameterType="com.pajk.mcpmetainfo.persistence.entity.InterfaceWhitelistEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO zk_interface_whitelist (
            prefix, description, enabled, created_by, created_at, updated_by, updated_at
        ) VALUES (
            #{prefix}, #{description}, #{enabled}, #{createdBy}, #{createdAt}, #{updatedBy}, #{updatedAt}
        )
    </insert>
    
    <!-- 更新白名单记录 -->
    <update id="update" parameterType="com.pajk.mcpmetainfo.persistence.entity.InterfaceWhitelistEntity">
        UPDATE zk_interface_whitelist SET
            prefix = #{prefix},
            description = #{description},
            enabled = #{enabled},
            updated_by = #{updatedBy},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>
    
    <!-- 根据ID删除白名单记录 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM zk_interface_whitelist WHERE id = #{id}
    </delete>
    
    <!-- 根据ID查找白名单记录 -->
    <select id="findById" parameterType="long" resultMap="InterfaceWhitelistResultMap">
        SELECT <include refid="whitelistColumns"/>
        FROM zk_interface_whitelist
        WHERE id = #{id}
    </select>
    
    <!-- 查找所有启用的白名单记录 -->
    <select id="findAllEnabled" resultMap="InterfaceWhitelistResultMap">
        SELECT <include refid="whitelistColumns"/>
        FROM zk_interface_whitelist
        WHERE enabled = 1
        ORDER BY created_at ASC
    </select>
    
    <!-- 查找所有白名单记录（包括禁用的） -->
    <select id="findAll" resultMap="InterfaceWhitelistResultMap">
        SELECT <include refid="whitelistColumns"/>
        FROM zk_interface_whitelist
        ORDER BY created_at ASC
    </select>
    
    <!-- 根据前缀查找白名单记录 -->
    <select id="findByPrefix" parameterType="string" resultMap="InterfaceWhitelistResultMap">
        SELECT <include refid="whitelistColumns"/>
        FROM zk_interface_whitelist
        WHERE prefix = #{prefix}
        LIMIT 1
    </select>
    
</mapper>

